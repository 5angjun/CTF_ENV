#32bit essential
# Install essential tools for gdb-peda & pwntools
dpkg --add-architecture i386
apt -y update
apt install -y libc6:i386 libncurses5:i386 libstdc++6:i386 ca-certificates patch pkg-config strace ltrace file upx-ucl

#for tmux debuging
apt-get install tmux -y 

# Install peda-heap && gdb plugin

mkdir ./BasicSetting
git clone https://github.com/Psj0221/hack-ctf.git
git clone https://github.com/Psj0221/CTF_ENV.git ./BasicSetting

# vimrc && zsh 
git clone https://github.com/Psj0221/CTF_ENV.git
cat ./BasicSetting/vimrc_set >> ~/.vimrc
cat ./BasicSetting/zshrc_set >> ~/.zshrc

#peda && pwndbg
git clone https://github.com/longld/peda.git ~/peda
git clone git://github.com/Mipu94/peda-heap.git ~/peda-heap

cd ~/
git clone https://github.com/scwuaptx/Pwngdb.git
cp ~/Pwngdb/.gdbinit ~/






