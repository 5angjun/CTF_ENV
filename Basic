#32bit essential
# Install essential tools for gdb-peda & pwntools
dpkg --add-architecture i386 \ &&
apt -y update \ &&
apt install -y vim python3 python3-dev python3-pip libssl-dev libffi-dev gdb wget curl gcc make git libc6:i386 libncurses5:i386 libstdc++6:i386 ca-certificates patch pkg-config strace ltrace file upx-ucl netcat ruby-full 

#for tmux debuging
apt-get install tmux -y 

# Install peda-heap && gdb plugin
git clone https://github.com/Mipu94/peda-heap.git ~/peda-heap \ &&
echo "source ~/peda-heap/peda.py" >> ~/.gdbinit

mkdir ~/set
git clone https://github.com/longld/peda.git ~/peda\ &&
git clone git://github.com/Mipu94/peda-heap.git ~/peda-heap\ &&
git clone https://github.com/scwuaptx/Pwngdb.git  ~/tools\ &&
git clone https://github.com/Psj0221/CTF_ENV.git ~/set\ &&
cat ~/set/vimrc_set >> ~/.vimrc\ &&
cat ~/set/zshrc_set >> ~/.zshrc\ &&
cat ~/set/gdbinit_set > ~/.gdbinit
